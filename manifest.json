{
    "name": "Mark My Words",
    "version": "0.1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches":["<all_urls>"],
            "js": ["mark_my_words.js"]
        }
    ],
    "background":{
        "scripts": ["background.js"]
    },
    "icons":{
        "96": "icons/mark_my_words_icon.png"
    },

    "permissions": [
        "activeTab", 
        "menus",
        "contextMenus",
        "currentWindow",
        "active",
        "tabs",
        "storage"
    ],

    "browser_specific_settings": {
        "gecko": {
          "id": "addon@example.com",
          "strict_min_version": "42.0"
        }
      },
      
    "browser_action": {
        "default_icon":"icons/mark_my_words_icon.png",
        "default_title": "Mark My Words"
    }
}